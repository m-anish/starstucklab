# === Starstuck Lab .editorconfig ===
# EditorConfig helps maintain consistent coding styles across editors.

root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

# Markdown and text files â€” keep intentional spaces
[*.md]
trim_trailing_whitespace = false

# YAML / JSON
[*.{yml,yaml,json}]
indent_size = 2

# Astro / HTML / CSS / JS / TS
[*.{astro,html,css,js,ts}]
indent_size = 2

# Python
[*.py]
indent_size = 4

# Shell scripts
[*.sh]
indent_style = space
indent_size = 2

# Makefiles (tabs are sacred here)
[Makefile]
indent_style = tab
